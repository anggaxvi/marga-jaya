<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/custom_snipet"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary"
        android:elevation="2dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_marga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/margajaya"
            android:fontFamily="@font/graves"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
           android:textAlignment="center"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            app:cardCornerRadius="0dp"
            android:backgroundTint="@color/white"
            style="@style/SnipetCustom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="2.1"
                android:scaleY="2.1"
                android:src="@drawable/ic_snipet"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp" />

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alamat_marga"
                android:fontFamily="@font/freesans"
                android:textSize="10sp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>