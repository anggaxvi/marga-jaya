<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/tv_statushomefrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/freesansb"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="TERSEDIA" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_homefrag"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/primary" />

        <TextView
            android:id="@+id/tv_jenishomefrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="215dp"
            android:fontFamily="@font/freesansb"
            android:text="Lapangan"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_mulaihomefrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/freesans"
            android:text="08.00"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/freesans"
            android:text="-"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_akhirhomefrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/freesans"
            android:text="10.00"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_hargahomefrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="270dp"
            android:fontFamily="@font/freesans"
            android:text="Rp.20.000"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_detail_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="15dp"
            android:text="Lihat"
            app:cornerRadius="8dp" />

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>